@charset "utf-8";
/* CSS Document */

#top-navigation-fullwidth {
	background:#569ADE url(../images/navbar_bg_blue.png) repeat-x scroll left top;
	height:25px;
	margin-top:0;
	text-align:center;
	width:100%;
}
#top-navigation-container {
	clear:both;
	overflow:hidden;
	width:1000px;
	background:#569ADE url(../images/navbar_bg_blue.png) repeat-x scroll left top;
}
div#top-navigation ul {
	background:transparent url(../images/navbar_bg_blue.png) repeat scroll 0 0;
	clear:both;
	float:left;
	font-family:Arial,Helvetica,Geneva,sans-serif;
	font-size:12px;
	list-style-image:none;
	list-style-position:outside;
	list-style-type:none;
	margin:0 0 0 0;
	padding:0;
	text-shadow:0 -1px 0 #1274D6;
}
div#top-navigation li a {
	color:#FFFFFF;
	display:block;
	font-weight:bold;
	padding:5px 15px;
	position:relative;
	text-decoration:none;
}
div#top-navigation li {
	border-right:1px solid #5599DD;
	float:left;
	min-width:70px;
	position:relative;
}
div#top-navigation li a:hover, div#top-navigation li:hover {
	background:transparent url(../images/navbar_bg_blue.png) repeat scroll 0 160px;
}
.selected, div#top-navigation li.selected a:hover, div#top-navigation li.selected:hover {
	background:transparent url(../images/navbar_bg_blue.png) repeat scroll 0 80px;
	font-weight:bold;
}